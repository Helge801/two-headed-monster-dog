{
  "manifest_version": 2,
  "name": "My-app",
  "version": "0.0.1",

  "background": {
    "scripts": ["dist/background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "images/icon-16.png",
    "default_title": "My-app",
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "permissions": [
    "activeTab",
    "webRequest"
  ]
}
